---
layout: sub-page
title: Get in touch

eleventyComputed:
  eleventyNavigation:
    key: get-in-touch
    parent: home
    title: "{{ title }}"
---

<form action="https://submit-form.com/pZ4co0cR">
  <!-- START: formspark configuration -->

  <input type="hidden" name="_email.subject" value="New message via the website!" />
  <input type="hidden" name="_email.from" value="1st Chertsey Scouts Website" />



  <input
    type="hidden"
    name="_redirect"
    value="{{ websiteUrl }}/about-us/get-in-touch/thanks"
  />

  <input type="hidden" name="_append" value="false" />
  <input
    type="hidden"
    name="_error"
    value="{{ websiteUrl }}/about-us/get-in-touch/something-went-wrong"
  />

  <div class="form-group">
    <label for="txtName">Name</label>
    <input
      type="text"
      class="form-control"
      id="txtName"
      placeholder="Enter name"
      required=""
    />
  </div>

  <!-- END: formspark configuration -->

  <div class="form-group">
    <label for="txtEmail">Email address</label>
    <input
      type="email"
      class="form-control"
      id="txtEmail"
      aria-describedby="emailHelp"
      placeholder="Enter email"
      required=""
    />
    <small id="emailHelp" class="form-text text-muted"
      >We'll never share your email with anyone else.</small
    >
  </div>

  <div class="form-group">
    <label for="txtMessage">Message</label>
    <textarea
      class="form-control"
      id="txtMessage"
      rows="3"
      required=""
    ></textarea>
  </div>

  <button type="submit" class="btn btn-primary mb-2">Send</button>
</form>
