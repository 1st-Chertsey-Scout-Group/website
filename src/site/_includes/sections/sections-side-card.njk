{% set navPages = collections.all | eleventyNavigation("sections") %}


<div class="card bg-secondary mb-3">
    <h4 class="card-header text-white">Sections</h4>
    <ul class="list-group list-group-flush">
        {% for navPage in navPages %}
            {% if navPage.visible %}
                <li class="list-group-item bg-transparent">
                    <a class="link link-primary {% if navPage.url in page.url %}active{% endif %}" href="{{navPage.url}}">
                        {{navPage.title }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</div>