<div class="card bg-secondary mb-3">
    <h4 class="card-header text-white">{{cardTitle}}</h4>
    <ul class="list-group list-group-flush">
        {% for article in cardArticles %}
            <li class="list-group-item bg-transparent">
                <div>
                    <small class="text-muted">{{article.data.date | dateFormat("d/m/yyyy")}}</small>
                </div>
                <a href="{{article.url}}">
                    {{article.data.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>